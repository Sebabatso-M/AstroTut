---
interface Props {
    cardHeading: string;
    cardContent: string;
    postLink?: string;
    showButton?: boolean;
    dark?: boolean;
}

const {
    cardHeading,
    cardContent,
    dark = false,
    postLink,
    showButton = false,
} = Astro.props as Props;
---

<div class=`card ${dark && 'dark'}`>
    <h3>{cardHeading}</h3>
    <p>
        <slot />
        {cardContent}
    </p>

    {
        showButton && (
            <a href={postLink} class='btn'>
                Read More
            </a>
        )
    }
</div>

<style>
    .card {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .dark {
        background: var(--color-primary);
        color: white;
    }
</style>
